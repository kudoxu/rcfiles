{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/","CMakeLists.txt"],
            "initializationOptions": {
                "compilationDatabaseDirectory":"build",
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    }
}
